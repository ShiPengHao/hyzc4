<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingTop="10dp"
        android:background="@drawable/bg_shape"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="患者编号："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myPationte_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10010213315117"
                android:textColor="#66000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="姓名："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myPationte_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="#66000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="性别："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myPationte_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="#66000000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="手机号："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myPationte_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34324545458"
                android:textColor="#66000000" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="床位号："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myPationte_bednumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textColor="#66000000" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="150dp"
                android:src="@mipmap/kf" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="路径名称："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myPationte_CPWName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dfsfd"
                android:textColor="#66000000" />

        </LinearLayout>

        <TextView
            android:id="@+id/myPationte_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="住院日期 ：2016-07-04 14:03:50"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>


