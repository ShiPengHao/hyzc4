<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_NRecordNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:text="护理记录编码:" />

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/tv_NursingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/click_diaocha_search"
        android:background="@color/background_white"
        android:textSize="@dimen/et_login_size"
        android:editable="false"
        android:hint="护理日期：" />


    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_NursingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/et_login_size"
        android:textColor="@color/click_diaocha_search"
        android:background="@color/background_white"
        android:text="护理时间：" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Pulsation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="脉搏:" />

            <EditText
                android:id="@+id/et_Pulsation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="体温:" />

            <EditText
                android:id="@+id/et_Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/background_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_BPL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="最低血压:" />

            <EditText
                android:id="@+id/et_BPL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_BHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="最高血压:" />

            <EditText
                android:id="@+id/et_BHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- <EditText
         android:layout_margin="5dp"
         android:hint="请输入护理内容"
         android:textSize="@dimen/et_login_size"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_weight="1"/>
 -->
    <EditText
        android:id="@+id/et_RecordContent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:textSize="14dp"
        android:hint="请输入护理内容"
        android:background="@drawable/bg_shape"/>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        />
</LinearLayout>
