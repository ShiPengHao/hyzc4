<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/item_titlebar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="基本信息"
                android:textColor="@color/MyPationte_MyFunction"
                android:textSize="@dimen/et_login_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:id="@+id/tv_NRecordNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="护理记录编码"
                    android:textSize="@dimen/et_login_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_NursingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="护理日期"
                        android:textSize="@dimen/et_login_size" />

                    <EditText
                        android:id="@+id/et_NursingDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="选择护理日期"
                        android:editable="false"
                        android:padding="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_NursingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="护理时段"
                        android:textSize="@dimen/et_login_size" />

                    <EditText
                        android:id="@+id/et_NursingTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="选择护理时段"
                        android:editable="false"
                        android:padding="6dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="患者身体指标"
                android:textColor="@color/MyPationte_MyFunction"
                android:textSize="@dimen/et_login_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_Pulsation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="脉搏"
                        android:textSize="@dimen/et_login_size" />

                    <EditText
                        android:id="@+id/et_Pulsation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="脉搏"
                        android:padding="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_Temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:padding="6dp"
                            android:text="体温"
                            android:textSize="@dimen/et_login_size" />

                        <EditText
                            android:id="@+id/et_Temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="体温"
                            android:inputType="number|numberDecimal"
                            android:padding="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_BPL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="最低血压"
                        android:textSize="@dimen/et_login_size" />

                    <EditText
                        android:id="@+id/et_BPL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="最低血压"
                        android:inputType="number"
                        android:padding="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_BPH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="最高血压"
                        android:textSize="@dimen/et_login_size" />

                    <EditText
                        android:id="@+id/et_BPH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="最高血压"
                        android:inputType="number"
                        android:padding="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_RecordContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="护理内容"
                        android:textSize="@dimen/et_login_size" />

                    <EditText
                        android:id="@+id/et_RecordContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="护理内容"
                        android:padding="6dp" />
                </LinearLayout>
            </LinearLayout>



            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

