<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/big_bg_color"
    android:orientation="vertical">

    <include layout="@layout/item_titlebar"></include>
    <include layout="@layout/item_search"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(温馨提示：默认选中第1项哦)"
        android:textSize="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/wangjimima_color"/>

    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/ll_diaoChaSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>
    <include layout="@layout/item_no_wifi"></include>
</LinearLayout>
