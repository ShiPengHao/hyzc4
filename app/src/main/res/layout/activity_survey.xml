<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/item_titlebar"></include>
    <com.bjym.hyzc.activity.view.NoScrollViewPager
        android:id="@+id/vg"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.bjym.hyzc.activity.view.NoScrollViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pre"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:background="@color/btn_color"
            android:textColor="@color/background_white"
            android:text="上一题"
            android:drawableLeft="@mipmap/left" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:background="@color/btn_color"
            android:textColor="@color/background_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="30dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:text="下一题"
            android:drawableRight="@mipmap/right_w" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:background="@color/btn_color"
            android:textColor="@color/background_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:text="提交" />
    </LinearLayout>

</LinearLayout>
