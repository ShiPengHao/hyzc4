<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_titlebar"></include>

    <include layout="@layout/item_search"></include>

    <LinearLayout
        android:id="@+id/ll_ZhenliaoContentManager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_finger_width"
        android:background="@drawable/item_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="2dp">

        <ImageView
            android:layout_width="@dimen/iv_login_size"
            android:layout_height="@dimen/iv_login_size"
            android:layout_marginLeft="@dimen/margin_left_iv_user"
            android:background="@mipmap/icon_notes" />

        <TextView
            android:id="@+id/tv_ZhenliaoContentManager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawPadding"
            android:layout_weight="1"
            android:drawablePadding="@dimen/drawPadding"
            android:text="诊疗内容管理"
            android:textColor="@color/myPationte_title_color"
            android:textSize="@dimen/et_login_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left_iv_user"
            android:background="@mipmap/oh" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/big_bg_color" />

    <LinearLayout
        android:id="@+id/ll_YiZhuManager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_finger_width"
        android:background="@drawable/item_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="2dp">
        <ImageView
            android:layout_width="@dimen/iv_login_size"
            android:layout_height="@dimen/iv_login_size"
            android:layout_marginLeft="@dimen/margin_left_iv_user"
            android:background="@mipmap/icon_health" />
        <TextView
            android:id="@+id/tv_YiZhuManager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawPadding"
            android:layout_weight="1"
            android:drawablePadding="@dimen/drawPadding"
            android:text="医嘱管理"
            android:textColor="@color/myPationte_title_color"
            android:textSize="@dimen/et_login_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left_iv_user"
            android:background="@mipmap/oh" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/big_bg_color" />

    <LinearLayout
        android:id="@+id/ll_addYizhu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_finger_width"
        android:background="@drawable/item_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="2dp">

        <ImageView
            android:layout_width="@dimen/iv_login_size"
            android:layout_height="@dimen/iv_login_size"
            android:layout_marginLeft="@dimen/margin_left_iv_user"
            android:background="@mipmap/icon_add" />

        <TextView
            android:id="@+id/tv_addYizhu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawPadding"
            android:layout_weight="1"
            android:drawablePadding="@dimen/drawPadding"
            android:text="新增医嘱"
            android:textColor="@color/myPationte_title_color"
            android:textSize="@dimen/et_login_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left_iv_user"
            android:background="@mipmap/oh" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/big_bg_color" />

</LinearLayout>
