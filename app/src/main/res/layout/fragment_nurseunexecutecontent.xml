<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/item_titlebar"></include>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/background_white"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/search"
            android:gravity="center"
            android:hint="点击条目选择是否执行"
            android:textColor="@color/click_diaocha_search"
            android:textSize="16dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"></ListView>

    <TextView
        android:id="@+id/tv_none_nurseContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="没有未执行的护理内容！"
        android:textColor="@color/MyPationte_MyMsg"
        android:visibility="gone" />
</LinearLayout>
