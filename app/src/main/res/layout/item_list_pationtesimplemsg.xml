<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:orientation="horizontal">


    <LinearLayout
        android:paddingTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="@dimen/margin_left_iv_user"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="患者编号："
                android:textColor="@color/myPationte_title_color"
                android:textSize="@dimen/et_login_size" />

            <TextView
                android:id="@+id/myPationte_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10010213315117"
                android:textColor="@color/myPationte_content_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="姓名："
                android:textColor="@color/myPationte_title_color"
                android:textSize="@dimen/et_login_size" />

            <TextView
                android:id="@+id/myPationte_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/myPationte_content_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="性别："
                android:textColor="@color/myPationte_title_color"
                android:textSize="@dimen/et_login_size" />

            <TextView
                android:id="@+id/myPationte_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/myPationte_content_color" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="手机号："
                android:textColor="@color/myPationte_title_color"
                android:textSize="@dimen/et_login_size" />

            <TextView
                android:id="@+id/myPationte_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34324545458"
                android:textColor="@color/myPationte_content_color" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="床位号："
                android:textColor="@color/myPationte_title_color"
                android:textSize="@dimen/et_login_size" />

            <TextView
                android:id="@+id/myPationte_bednumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textColor="@color/myPationte_content_color" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="路径名称："
                android:textColor="@color/myPationte_title_color"
                android:textSize="@dimen/et_login_size" />

            <TextView
                android:id="@+id/myPationte_CPWName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dfsfd"
                android:textColor="@color/myPationte_content_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住院日期 ："
                android:textColor="@color/myPationte_title_color"
                android:textSize="@dimen/et_login_size" />

            <TextView
                android:id="@+id/myPationte_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-7-26 00:00:00"
                android:textColor="@color/myPationte_content_color" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:background="@mipmap/add"/>

</LinearLayout>


