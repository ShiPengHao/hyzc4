<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/big_bg_color"
    android:orientation="vertical">

    <include layout="@layout/item_titlebar"></include>
<include layout="@layout/item_search_nohint"></include>

 <!--   <ListView
        android:id="@+id/ll_diaoChaSort"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"></ListView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_finger_width"
        android:background="@color/background_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:layout_marginTop="2dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tv_ExitCPWPationte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_iv_user"
            android:layout_weight="1"
            android:text="退出路径患者统计"
            android:textColor="@color/fontcolor"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left_iv_user"
            android:background="@mipmap/oh" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/big_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_finger_width"
        android:background="@color/background_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tv_ExitCPWCause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_iv_user"
            android:layout_weight="1"
            android:text="退出路径原因分析"
            android:textColor="@color/fontcolor"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left_iv_user"
            android:background="@mipmap/oh" />

    </LinearLayout>


</LinearLayout>
